<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zjgj.uc.mybatis.CasUserMybatisDao">

	<resultMap id="RM_CasUser" type="com.zjgj.uc.entity.CasUser">
        <result property="userId" column="user_id"/>
        <result property="deptId" column="dept_id"/>
        <result property="userAcc" column="user_acc"/>
        <result property="userPass" column="user_pass"/>
        <result property="userName" column="user_name"/>
        <result property="userType" column="user_type"/>
        <result property="userMobile" column="user_mobile"/>
        <result property="userPhone" column="user_phone"/>
        <result property="userLevel" column="user_level"/>
        <result property="userCity" column="user_city"/>
        <result property="entryTime" column="entry_time"/>
        <result property="userStat" column="user_stat"/>
        <result property="userDel" column="user_del"/>
        <result property="leaderId" column="leader_id"/>
        <result property="leaderName" column="leader_name"/>
        <result property="creTime" column="cre_time"/>
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="CasUser_columns">
		user_id,dept_id,user_acc,user_pass,user_name,user_type,user_mobile,user_phone,user_level,user_city,entry_time,user_stat,user_del,leader_id,leader_name,cre_time
	</sql>
	
	<!-- 添加 -->
	<insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO cas_user (
        	user_id ,
        	dept_id ,
        	user_acc ,
        	user_pass ,
        	user_name ,
        	user_type ,
        	user_mobile ,
        	user_phone ,
        	user_level ,
        	user_city ,
        	entry_time ,
        	user_stat ,
        	user_del ,
        	leader_id ,
        	leader_name ,
        	cre_time 
        ) VALUES (	
        	#{userId} ,
        	#{deptId} ,
        	#{userAcc} ,
        	#{userPass} ,
        	#{userName} ,
        	#{userType} ,
        	#{userMobile} ,
        	#{userPhone} ,
        	#{userLevel} ,
        	#{userCity} ,
        	#{entryTime} ,
        	#{userStat} ,
        	#{userDel} ,
        	#{leaderId} ,
        	#{leaderName} ,
        	#{creTime} 
        )
	</insert>
    
	<!-- 修改 -->
	<update id="update" >
        UPDATE cas_user 
		<set>
			<if test="@com.zjgj.uc.util.Ognl@isNotEmpty(deptId)">dept_id = #{deptId} ,</if>
			<if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userAcc)">user_acc = #{userAcc} ,</if>
			<if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userPass)">user_pass = #{userPass} ,</if>
			<if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userName)">user_name = #{userName} ,</if>
			<if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userType)">user_type = #{userType} ,</if>
			<if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userMobile)">user_mobile = #{userMobile} ,</if>
			<if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userPhone)">user_phone = #{userPhone} ,</if>
			<if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userLevel)">user_level = #{userLevel} ,</if>
			<if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userCity)">user_city = #{userCity} ,</if>
			<if test="@com.zjgj.uc.util.Ognl@isNotEmpty(entryTime)">entry_time = #{entryTime} ,</if>
			<if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userStat)">user_stat = #{userStat} ,</if>
			<if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userDel)">user_del = #{userDel} ,</if>
			<if test="@com.zjgj.uc.util.Ognl@isNotEmpty(leaderId)">leader_id = #{leaderId} ,</if>
			<if test="@com.zjgj.uc.util.Ognl@isNotEmpty(leaderName)">leader_name = #{leaderName} ,</if>
			<if test="@com.zjgj.uc.util.Ognl@isNotEmpty(creTime)">cre_time = #{creTime} </if>
		</set>
        WHERE 
	        user_id = #{userId} 
	</update>

	<!-- 删除 -->
    <delete id="delete">
		DELETE FROM cas_user WHERE
        user_id = #{id} 
    </delete>
	
	<!-- 批量删除 -->
	<delete id="batchDelete" parameterType="java.util.List">
        DELETE FROM  cas_user  WHERE
        user_id IN 
        <foreach item="item" collection="idsList" open="(" separator="," close=")">
#{item}		</foreach>  
    </delete>
    
	<!-- 根据主键获取对象 -->
    <select id="getByID" resultMap="RM_CasUser">
		SELECT <include refid="CasUser_columns" />
		FROM cas_user WHERE 
		user_id = #{id} 
	</select>
	
	<!-- 获取总条数 -->
	<select id="countAll" resultType="int">
        SELECT count(user_id) FROM cas_user 
    </select>
	
	<!-- 获取所有 -->
	<select id="findAll" resultMap="RM_CasUser">
        SELECT <include refid="CasUser_columns" /> 
		FROM cas_user 
    </select>
	
	<!-- 提取公共WHERE -->
	<sql id="CasUser_where">
		<where>
			 
	       <if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userId)">
				AND user_id = #{userId}
			</if>
	       <if test="@com.zjgj.uc.util.Ognl@isNotEmpty(deptId)">
				AND dept_id = #{deptId}
			</if>
	       <if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userAcc)">
				AND user_acc = #{userAcc}
			</if>
	       <if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userPass)">
				AND user_pass = #{userPass}
			</if>
	       <if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userName)">
				AND user_name = #{userName}
			</if>
	       <if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userType)">
				AND user_type = #{userType}
			</if>
	       <if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userMobile)">
				AND user_mobile = #{userMobile}
			</if>
	       <if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userPhone)">
				AND user_phone = #{userPhone}
			</if>
	       <if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userLevel)">
				AND user_level = #{userLevel}
			</if>
	       <if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userCity)">
				AND user_city = #{userCity}
			</if>
	       <if test="@com.zjgj.uc.util.Ognl@isNotEmpty(entryTimeBegin)">
				AND entry_time >= #{entryTimeBegin}
		   </if>
		   <if test="@com.zjgj.uc.util.Ognl@isNotEmpty(entryTimeEnd)">
				AND entry_time &lt;= #{entryTimeEnd}
		   </if>
	       <if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userStat)">
				AND user_stat = #{userStat}
			</if>
	       <if test="@com.zjgj.uc.util.Ognl@isNotEmpty(userDel)">
				AND user_del = #{userDel}
			</if>
	       <if test="@com.zjgj.uc.util.Ognl@isNotEmpty(leaderId)">
				AND leader_id = #{leaderId}
			</if>
	       <if test="@com.zjgj.uc.util.Ognl@isNotEmpty(leaderName)">
				AND leader_name = #{leaderName}
			</if>
	       <if test="@com.zjgj.uc.util.Ognl@isNotEmpty(creTimeBegin)">
				AND cre_time >= #{creTimeBegin}
		   </if>
		   <if test="@com.zjgj.uc.util.Ognl@isNotEmpty(creTimeEnd)">
				AND cre_time &lt;= #{creTimeEnd}
		   </if>
		</where>
	</sql>
	
	<!-- 根据条件获取条数 -->
    <select id="findNumberByCondition" resultType="int">
        SELECT count(user_id) FROM cas_user 
		<include refid="CasUser_where"/>    
    </select>
    
	<!-- 根据条件获取集合 -->
    <select id="findPageBreakByCondition" resultMap="RM_CasUser">
    	SELECT <include refid="CasUser_columns" />
	    FROM cas_user 
		<include refid="CasUser_where"/>
		
		<if test="@com.zjgj.uc.util.Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
    </select>
</mapper>

