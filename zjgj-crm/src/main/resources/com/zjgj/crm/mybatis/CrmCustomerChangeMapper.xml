<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zjgj.crm.mybatis.CrmCustomerChangeMybatisDao">

	<resultMap id="RM_CrmCustomerChange" type="com.zjgj.crm.entity.CrmCustomerChange">
        <result property="cusChgId" column="cus_chg_id"/>
        <result property="cusId" column="cus_id"/>
        <result property="chgDsc" column="chg_dsc"/>
        <result property="chgBef" column="chg_bef"/>
        <result property="chgAft" column="chg_aft"/>
        <result property="chgTime" column="chg_time"/>
        <result property="chgUser" column="chg_user"/>
        <result property="chgName" column="chg_name"/>
        <result property="chgIp" column="chg_ip"/>
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="CrmCustomerChange_columns">
		cus_chg_id,cus_id,chg_dsc,chg_bef,chg_aft,chg_time,chg_user,chg_name,chg_ip
	</sql>
	
	<!-- 添加 -->
	<insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO crm_customer_change (
        	cus_chg_id ,
        	cus_id ,
        	chg_dsc ,
        	chg_bef ,
        	chg_aft ,
        	chg_time ,
        	chg_user ,
        	chg_name ,
        	chg_ip 
        ) VALUES (	
        	#{cusChgId} ,
        	#{cusId} ,
        	#{chgDsc} ,
        	#{chgBef} ,
        	#{chgAft} ,
        	#{chgTime} ,
        	#{chgUser} ,
        	#{chgName} ,
        	#{chgIp} 
        )
	</insert>
    
	<!-- 修改 -->
	<update id="update" >
        UPDATE crm_customer_change 
		<set>
			<if test="@com.zjgj.crm.util.Ognl@isNotEmpty(cusId)">cus_id = #{cusId} ,</if>
			<if test="@com.zjgj.crm.util.Ognl@isNotEmpty(chgDsc)">chg_dsc = #{chgDsc} ,</if>
			<if test="@com.zjgj.crm.util.Ognl@isNotEmpty(chgBef)">chg_bef = #{chgBef} ,</if>
			<if test="@com.zjgj.crm.util.Ognl@isNotEmpty(chgAft)">chg_aft = #{chgAft} ,</if>
			<if test="@com.zjgj.crm.util.Ognl@isNotEmpty(chgTime)">chg_time = #{chgTime} ,</if>
			<if test="@com.zjgj.crm.util.Ognl@isNotEmpty(chgUser)">chg_user = #{chgUser} ,</if>
			<if test="@com.zjgj.crm.util.Ognl@isNotEmpty(chgName)">chg_name = #{chgName} ,</if>
			<if test="@com.zjgj.crm.util.Ognl@isNotEmpty(chgIp)">chg_ip = #{chgIp} </if>
		</set>
        WHERE 
	        cus_chg_id = #{cusChgId} 
	</update>

	<!-- 删除 -->
    <delete id="delete">
		DELETE FROM crm_customer_change WHERE
        cus_chg_id = #{id} 
    </delete>
	
	<!-- 批量删除 -->
	<delete id="batchDelete" parameterType="java.util.List">
        DELETE FROM  crm_customer_change  WHERE
        cus_chg_id IN 
        <foreach item="item" collection="idsList" open="(" separator="," close=")">
#{item}		</foreach>  
    </delete>
    
	<!-- 根据主键获取对象 -->
    <select id="getByID" resultMap="RM_CrmCustomerChange">
		SELECT <include refid="CrmCustomerChange_columns" />
		FROM crm_customer_change WHERE 
		cus_chg_id = #{id} 
	</select>
	
	<!-- 获取总条数 -->
	<select id="countAll" resultType="int">
        SELECT count(cus_chg_id) FROM crm_customer_change 
    </select>
	
	<!-- 获取所有 -->
	<select id="findAll" resultMap="RM_CrmCustomerChange">
        SELECT <include refid="CrmCustomerChange_columns" /> 
		FROM crm_customer_change 
    </select>
	
	<!-- 提取公共WHERE -->
	<sql id="CrmCustomerChange_where">
		<where>
			 
	       <if test="@com.zjgj.crm.util.Ognl@isNotEmpty(cusChgId)">
				AND cus_chg_id = #{cusChgId}
			</if>
	       <if test="@com.zjgj.crm.util.Ognl@isNotEmpty(cusId)">
				AND cus_id = #{cusId}
			</if>
	       <if test="@com.zjgj.crm.util.Ognl@isNotEmpty(chgDsc)">
				AND chg_dsc = #{chgDsc}
			</if>
	       <if test="@com.zjgj.crm.util.Ognl@isNotEmpty(chgBef)">
				AND chg_bef = #{chgBef}
			</if>
	       <if test="@com.zjgj.crm.util.Ognl@isNotEmpty(chgAft)">
				AND chg_aft = #{chgAft}
			</if>
	       <if test="@com.zjgj.crm.util.Ognl@isNotEmpty(chgTimeBegin)">
				AND chg_time >= #{chgTimeBegin}
		   </if>
		   <if test="@com.zjgj.crm.util.Ognl@isNotEmpty(chgTimeEnd)">
				AND chg_time &lt;= #{chgTimeEnd}
		   </if>
	       <if test="@com.zjgj.crm.util.Ognl@isNotEmpty(chgUser)">
				AND chg_user = #{chgUser}
			</if>
	       <if test="@com.zjgj.crm.util.Ognl@isNotEmpty(chgName)">
				AND chg_name = #{chgName}
			</if>
	       <if test="@com.zjgj.crm.util.Ognl@isNotEmpty(chgIp)">
				AND chg_ip = #{chgIp}
			</if>
		</where>
	</sql>
	
	<!-- 根据条件获取条数 -->
    <select id="findNumberByCondition" resultType="int">
        SELECT count(cus_chg_id) FROM crm_customer_change 
		<include refid="CrmCustomerChange_where"/>    
    </select>
    
	<!-- 根据条件获取集合 -->
    <select id="findPageBreakByCondition" resultMap="RM_CrmCustomerChange">
    	SELECT <include refid="CrmCustomerChange_columns" />
	    FROM crm_customer_change 
		<include refid="CrmCustomerChange_where"/>
		
		<if test="@com.zjgj.crm.util.Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
    </select>
</mapper>

